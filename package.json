{
    "name": "get-my-access-token",
    "description": "a simple UI for getting access tokens for various services",
    "version": "1.0.0",
    "main": "dist/app.js",
    "repository": "git@github.com:angelxmoreno/get-my-access-token.git",
    "author": "Angel S. Moreno <angel.moreno@dotdashmdp.com>",
    "license": "MIT",
    "scripts": {
        "start": "cross-env NODE_ENV=production TS_NODE_BASEURL=./dist node -r tsconfig-paths/register dist/app.js",
        "dev": "cross-env NODE_ENV=development nodemon",
        "test": "mocha -r ts-node/register tests/**/*.spec.ts",
        "test:coverage": "nyc npm run test",
        "tsc": "tsc  -p .",
        "clean": "rimraf dist/*",
        "build": "yarn clean && yarn tsc",
        "lint": "yarn eslint . --ext json,js,ts,hbs --cache",
        "lint:fix": "yarn eslint . --ext json,js,ts,hbs --fix --cache",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "deploy": "cd .. && yarn deploy:api",
        "prepare": "husky install"
    },
    "dependencies": {
        "@types/session-file-store": "^1.2.2",
        "body-parser": "^1.20.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "csurf": "^1.11.0",
        "dotenv": "^16.0.3",
        "dotenv-expand": "^9.0.0",
        "express": "^4.18.2",
        "express-handlebars": "^6.0.6",
        "express-session": "^1.17.3",
        "handlebars": "^4.7.7",
        "lodash": "^4.17.21",
        "morgan": "^1.10.0",
        "passport": "^0.6.0",
        "reflect-metadata": "^0.1.13",
        "routing-controllers": "^0.9.0",
        "session-file-store": "^1.5.0",
        "tsconfig-paths": "^4.1.0",
        "tslib": "^2.4.1"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/body-parser": "^1.19.2",
        "@types/chai": "^4.3.3",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.12",
        "@types/csurf": "^1.11.2",
        "@types/express": "^4.17.14",
        "@types/express-session": "^1.17.5",
        "@types/lodash": "^4.14.187",
        "@types/mocha": "^10.0.0",
        "@types/morgan": "^1.9.3",
        "@types/node": "^18.11.9",
        "@types/passport": "^1.0.11",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "chai": "^4.3.6",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-html": "^7.1.0",
        "eslint-plugin-prettier": "^4.2.1",
        "lint-staged": "^13.0.3",
        "mocha": "^10.1.0",
        "nodemon": "^2.0.20",
        "nyc": "^15.1.0",
        "prettier": "^2.7.1",
        "rimraf": "^3.0.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4",
        "husky": "^8.0.0"
    },
    "engines": {
        "node": "16.15.1",
        "yarn": "1.22.19"
    },
    "lint-staged": {
        "*.{js,ts,json,hbs}": "eslint --fix --cache"
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "check-coverage": true,
        "all": true,
        "include": [
            "src/**/!(*.test.*).[tj]s?(x)"
        ],
        "exclude": [
            "src/_tests_/**/*.*"
        ],
        "reporter": [
            "html",
            "lcov",
            "text",
            "text-summary"
        ],
        "report-dir": "coverage"
    }
}
